<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mccorby.trainer_dl4j.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/action_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true"
        >

        <Button
            android:id="@+id/train_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train"/>

        <Button
            android:id="@+id/predict_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Predict"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/prediction_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Prediction:"/>
        <TextView
            android:id="@+id/predict_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/holo_green_light"
            android:textSize="20sp"
            tools:text="0.44"/>
    </LinearLayout>


    <ScrollView
        android:id="@+id/logging_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_layout"
        android:layout_above="@id/prediction_layout">
    <TextView
        android:id="@+id/logging_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        tools:text="Logging area"
        />
    </ScrollView>

</RelativeLayout>
